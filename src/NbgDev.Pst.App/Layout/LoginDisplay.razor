@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity?.Name!
        <MudButton Class="nav-link btn btn-link" Color="Color.Inherit" OnClick="BeginLogOut">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudLink Color="Color.Inherit" Href="MicrosoftIdentity/Account/SignIn">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>

@code{
    public void BeginLogOut()
    {
        Navigation.NavigateTo("MicrosoftIdentity/Account/SignOut", forceLoad: true);
    }
}
